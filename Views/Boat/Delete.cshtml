@model MarinaManagementSystem.Models.Boat

<h2>Delete Boat</h2>

<p>Are you sure you want to delete this boat?</p>
<h3>@Model.Name (Length: @Model.Length m)</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BoatId" />
    <input type="hidden" asp-for="CustomerId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="@Url.Action("Dashboard", "Customer", new { customerId = Model.CustomerId })">Cancel</a>
