@model MarinaManagementSystem.Models.Boat
@{
    ViewData["Title"] = "Create Boat";
}

<h2>Create Boat</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CustomerId" value="@ViewBag.CustomerId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Length"></label>
        <input asp-for="Length" class="form-control" type="number" step="0.01" min="0" required />
        <span asp-validation-for="Length" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>